{
  "compileOnSave": false,
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "incremental": true,
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "importHelpers": true,
    "noEmitOnError": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,

    /* Module Resolution Options */
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Experimental Options */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
